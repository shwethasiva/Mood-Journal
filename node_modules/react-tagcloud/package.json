    "babel-jest": "^17.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^3.2.2",
    "eslint-plugin-react": "^6.0.0",
    "jest-cli": "^17.0.0",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "webpack": "^1.13.3"
  }
